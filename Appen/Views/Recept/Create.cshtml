@model ReceptBank.Models.ReceptViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Create New Recipe</h2>


<style>
    .error-message {
        display: block;
        margin-top: 5px; 
        margin-bottom: 5px;
        color: red; 
        font-weight: bold; 
    }
</style>

 <form asp-controller="Recept" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter recipe name" required>
        <span class="error-message">@Html.ValidationMessageFor(model => model.Name)</span>
    </div>
    <div class="form-group">
        <label for="Ingredients">Ingredients:</label>
        <textarea class="form-control" id="Ingredients" name="Ingredients" rows="5" placeholder="Enter recipe ingredients" required></textarea>
        <span class="error-message">@Html.ValidationMessageFor(model => model.Ingredients)</span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form> 
