@model ReceptBank.Models.ReceptViewModel

<form method="post" action="@Url.Action("SubmitEdit")">
    <input type="hidden" name="id" value="@Model.ReceptId" />
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="name" placeholder="Enter recipe name" value="@Model.Name" required>
    </div>
    <div class="form-group">
        <label for="Ingredients">Ingredients:</label>
        <input class="form-control" id="Ingredients" name="ingredients" rows="5" placeholder="Enter recipe ingredients" value="@Model.Ingredients" required></input>
    </div>
    <button class="btn btn-primary" type="submit" asp-action="SubmitEdit">Save</button>
</form>

