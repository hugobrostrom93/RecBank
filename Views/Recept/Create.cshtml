@model ReceptBank.Models.ReceptViewModel

<h2>Create New Recipe</h2>

<form asp-controller="Recept" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter recipe name" required>
    </div>
    <div class="form-group">
        <label for="Ingredients">Ingredients:</label>
        <textarea class="form-control" id="Ingredients" name="Ingredients" rows="5" placeholder="Enter recipe ingredients" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
