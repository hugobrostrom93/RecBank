@model IEnumerable<ReceptBank.Models.ReceptViewModel>

<h2>Recept List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Recept</th>
            <!-- <th>Ingredients</th> -->
        </tr>
    </thead>
    <tbody>
        
@foreach (var Recept in Model)
        {
            <tr>
                <td><button class="hover-effect"
                style="margin-bottom: 7px; 
                border-radius: 7px;
                background-color: pink">@Recept.Name</button><br></td>
           </tr>
        } 
    </tbody>    
</table>


